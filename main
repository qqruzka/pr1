#include "dbase.h"

int main(int argc, char* argv[]) {
    dbase db;
    try {
        db.loadSchema("schema.json");
        db.load();

        if (argc > 2 && string(argv[1]) == "--query") {
            string query = argv[2];
            executeQuery(db, query);
        } else {
            cout << "Usage: " << argv[0] << " --query '<your query>'" << endl;
        }
    } catch (const exception& e) {
        cout << "Error: " << e.what() << endl;
    }
    return 0;
}
